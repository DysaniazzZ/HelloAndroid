<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dysaniazzz">
    
    <!--Permission-->
    <!--系统级别的对话框-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!--读取系统联系人-->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!--控制手机震动-->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!--接收短信-->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <!--发送短信-->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!--向SD卡中写数据-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
        <!--Activity-->
        <!--登录页面-->
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--主页面-->
        <activity android:name=".activity.MainActivity"/>
        <!--数据库操作页面-->
        <activity android:name=".activity.DatabaseActivity"/>
        <!--联系人页面-->
        <activity android:name=".activity.ContactsActivity"/>
        <!--通知栏页面-->
        <activity android:name=".activity.NotificationActivity"/>
        <!--短信页面-->
        <activity android:name=".activity.SmsActivity"/>
        <!--选择相片页面-->
        <activity android:name=".activity.ChoosePicActivity"/>
        <!--音频播放页面-->
        <activity android:name=".activity.AudioPlayActivity"/>
        <!--Demo页面-->
        <activity android:name=".activity.DemoActivity"/>
        
        <!--Receiver-->
        <!--强制下线的Receiver-->
        <receiver android:name=".receiver.ForceOfflineReceiver">
            <intent-filter>
                <!--自定义的action-->
                <action android:name="com.example.dysaniazzz.FORCE_OFFLINE"/>
            </intent-filter>
        </receiver>
        
        <!--Provider-->
        <!--自定义的数据库Provider-->
        <provider
            android:name=".provider.DatabaseProvider"
            android:authorities="com.example.dysaniazzz.provider"
            android:exported="true">
        </provider>
        
    </application>

</manifest>