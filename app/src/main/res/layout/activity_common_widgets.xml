<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/btn_widgets_changeProgress"
        style="@style/primary_button"
        android:text="Change Progress"/>

    <Button
        android:id="@+id/btn_widgets_alert_dialog"
        style="@style/primary_button"
        android:text="Alert Dialog"/>

    <Button
        android:id="@+id/btn_widgets_progress_dialog"
        style="@style/primary_button"
        android:text="Progress Dialog"/>

    <Button
        android:id="@+id/btn_widgets_recycler_view"
        style="@style/primary_button"
        android:text="RecyclerView"/>

    <ProgressBar
        android:id="@+id/pb_widgets_horizontal_progress"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progressBackgroundTint="#00ff00"
        android:progressBackgroundTintMode="src_atop"
        android:progressTint="#ff0000"
        android:progressTintMode="src_atop"
        android:secondaryProgressTint="#0000ff"
        android:secondaryProgressTintMode="src_atop"/>

    <ProgressBar
        android:id="@+id/pb_widgets_normal_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminateTint="@color/colorProgress"
        android:indeterminateTintMode="src_atop"/>

