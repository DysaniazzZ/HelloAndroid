<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_database_create_database"
            style="@style/primary_button"
            android:text="Create database"/>

        <Button
            android:id="@+id/btn_database_insert_data"
            style="@style/primary_button"
            android:text="Insert data"/>

        <Button
            android:id="@+id/btn_database_update_data"
            style="@style/primary_button"
            android:text="Update data"/>

        <Button
            android:id="@+id/btn_database_delete_data"
            style="@style/primary_button"
            android:text="Delete data"/>

        <Button
            android:id="@+id/btn_database_query_data"
            style="@style/primary_button"
            android:text="Query data"/>

        <Button
            android:id="@+id/btn_database_sql_insert"
            style="@style/primary_button"
            android:text="SQL Insert data"/>

        <Button
            android:id="@+id/btn_database_sql_update"
            style="@style/primary_button"
            android:text="SQL Update data"/>

        <Button
            android:id="@+id/btn_database_sql_delete"
            style="@style/primary_button"
            android:text="SQL Delete data"/>

        <Button
            android:id="@+id/btn_database_sql_query"
            style="@style/primary_button"
            android:text="SQL Query data"/>

        <Button
            android:id="@+id/btn_database_replace_data"
            style="@style/primary_button"
            android:text="Replace data"/>

        <TextView
            android:id="@+id/tv_database_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""/>

    </LinearLayout>

</ScrollView>