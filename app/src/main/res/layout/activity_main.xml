<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- 数据库操作页面 -->
    <Button
        android:id="@+id/btn_main_to_database"
        style="@style/primary_button"
        android:text="MainActivity to DataBaseActivity"/>

    <!-- 联系人页面 -->
    <Button
        android:id="@+id/btn_main_to_contacts"
        style="@style/primary_button"
        android:text="MainActivity to ContactsActivity"/>

    <!-- 通知栏页面 -->
    <Button
        android:id="@+id/btn_main_to_notification"
        style="@style/primary_button"
        android:text="MainActivity to NotificationActivity"/>

    <!-- 短信页面 -->
    <Button
        android:id="@+id/btn_main_to_sms"
        style="@style/primary_button"
        android:text="MainActivity to SmsActivity"/>

    <!-- 选择相片页面 -->
    <Button
        android:id="@+id/btn_main_to_choosepic"
        style="@style/primary_button"
        android:text="MainActivity to ChoosePicActivity"/>

    <!-- 音频播放页面 -->
    <Button
        android:id="@+id/btn_main_to_audioplay"
        style="@style/primary_button"
        android:text="MainActivity to AudioPlayActivity"/>

    <!-- 视频播放页面 -->
    <Button
        android:id="@+id/btn_main_to_videoplay"
        style="@style/primary_button"
        android:text="MainActivity to VideoPlayActivity"/>

    <!-- Demo页面 -->
    <Button
        android:id="@+id/btn_main_to_service"
        style="@style/primary_button"
        android:text="MainActivity to ServiceActivity"/>

    <!-- 发送强制下线广播 -->
    <Button
        android:id="@+id/btn_main_force_offline"
        style="@style/primary_button"
        android:text="Send force offline broadcast"/>

</LinearLayout>